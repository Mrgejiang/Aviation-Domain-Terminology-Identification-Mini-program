
.item {
		display: flex;
		flex-direction: column;
}
.article-date {
		color: #C8C7CC;
}
.pages {
		background-color: #FFFFFF;
}
.avatar {
		width: 300rpx;
		height: 200rpx;
		margin-right: 10rpx;
}
.main {
		justify-content: space-between;
		flex: 1;
}
.title {
		font-size: 16px;
}
.info {
		flex-direction: row;
		justify-content: space-between;
}
.author,
	.last_modify_date {
		font-size: 14px;
		color: #999999;
}
.uni-search-box {
		background-color: #FFFFFF;
		position: -webkit-sticky;
		position: sticky;
		height: 50px;
		top: 0;
		left: 0;

		z-index: 9;


		width: 580rpx;
}
.cover-search-bar {
		height: 50px;
		position: relative;
		top: -50px;
		margin-bottom: -50px;

		z-index: 999;
}
